@model DerivcoKitchenClient.Models.OnlineStore.AddToCartModel

<div class="popup-form-medium">
    <form id="formAddToCart" asp-antiforgery="true">
        <fieldset>
            <h1>@Model.Name | @StaticClass.EnumHelper.GetEnumDescription(StaticClass.EnumHelper.CurrencyCode.Code) @Model.Price.ToString("N")</h1>
            <input id="Quantity" asp-for="Quantity" type="number" class="text-box" placeholder="Quantity" />
            <input asp-for="Name" type="hidden" />
            <input asp-for="Price" type="hidden" />
            <input asp-for="PictureFileName" type="hidden" />
            <div id="messageAddToCart" class="message-label"></div>
            <nav>
                <table id="navAddToCart" class="nav-table">
                    <tr>
                        <td>
                            <input type="button" value="ADD TO CART" class="button" onclick="submitAddToCart()" />
                        </td>
                    </tr>
                    <tr>
                        <td class="nav-separator"></td>
                    </tr>
                    <tr>
                        <td>
                            <input type="button" value="CANCEL" class="button" onclick="hidePopupForm()" />
                        </td>
                    </tr>
                </table>
                <input id="progressBarAddToCart" type="button" value="WORKING..." class="button-progress-bar" disabled="disabled" />
            </nav>
        </fieldset>
    </form>
</div>
